<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.silvermining.demo.entity.Rol"
           table="ROL" schema="TESTING">
        <id name="id" type="java.lang.Long">
            <column name="ID" scale="0" />
            <generator class="sequence">
                <param name="sequence">seq_rol</param>
            </generator>
        </id>
        <property name="nombre" type="string">
            <column name="NOMBRE" />
        </property>
        <set name="listaPerfil" table="PERFIL"
                inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="ROLID" not-null="true" />
            </key>
            <many-to-many class="com.silvermining.demo.entity.Perfil">
                <column name="PERFILID" not-null="true" />
            </many-to-many>
        </set>
        <set name="listaMenu" table="MENU"
             inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="ROLID" not-null="true" />
            </key>
            <many-to-many class="com.silvermining.demo.entity.Menu">
                <column name="MENUID" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>
